<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.shobhitsagar.login.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                app:srcCompat="@drawable/mylogo" />

            <EditText
                android:id="@+id/username2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:textColorHint="#969292"
                android:paddingBottom="18dp"
                android:inputType="textPersonName"
                android:hint="Username"
                android:layout_below="@+id/imageView"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:textColorHint="#969292"
                android:paddingBottom="18dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_below="@+id/username2"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:textColorHint="#969292"
                android:paddingBottom="18dp"
                android:inputType="textPersonName"
                android:hint="Email Address"
                android:layout_below="@+id/password2"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/crtacnt2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_below="@+id/email2"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textAllCaps="false"
                android:background="@drawable/red_rectangle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Create Account" />

            <Button
                android:id="@+id/back_to_login2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_below="@+id/crtacnt2"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textAllCaps="false"
                android:background="@drawable/btn_silver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Log In" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
